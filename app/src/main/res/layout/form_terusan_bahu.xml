<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#efeeed"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Tipe Bahu Luar"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/formBahuLuarTipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Spinner>
            </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/formBahuLuarForm"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/formBahuMal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight="1.5"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="material : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2.5"
                        app:cardCornerRadius="5dp">

                        <Spinner
                            android:id="@+id/formBahuLuarMaterial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lebar (b) : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        app:cardCornerRadius="5dp">

                        <EditText
                            android:id="@+id/formBahuLuarLebar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/background_light"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Meter"
                        android:textColor="#AA2929"
                        android:textSize="11dp"
                        android:textStyle="italic|bold" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/formBahuDrain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:text="Kemiringan : "
                        android:textAlignment="viewEnd"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="3"
                            app:cardCornerRadius="5dp">

                            <EditText
                                android:id="@+id/formBahuKemiringanDerajat"
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="@android:color/background_light"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:paddingLeft="10dp"
                                android:textSize="14dp" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Derajat"
                            android:textColor="#AA2929"
                            android:textSize="11dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textAlignment="viewEnd"
                        android:layout_weight="2"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            app:cardBackgroundColor="#d9d9d9"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="3"
                            app:cardCornerRadius="5dp">

                            <TextView
                                android:id="@+id/formBahuKemiringanPersen"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLength="4"
                                android:paddingLeft="10dp"
                                android:textSize="14dp" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Persen"
                            android:textColor="#AA2929"
                            android:textSize="11dp"
                            android:textStyle="italic|bold" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Kearah"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#d9d9d9"
                    app:cardCornerRadius="3dp">


                    <RadioGroup
                        android:id="@+id/formBahuPenampang"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginBottom="2.5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/formBahuLuarJalan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Luar Jalan"
                                    android:textColor="#4159BE"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/arah_luar"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"/>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="2.5dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/formBahuDalamJalan"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Dalam Jalan"
                                    android:textColor="#4159BE"
                                    android:textSize="12dp"
                                    android:textStyle="bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="5dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:src="@drawable/arah_dalam"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"/>
                            </androidx.cardview.widget.CardView>


                        </LinearLayout>



                    </RadioGroup>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Kondisi kemiringan Bahu Luar"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="2.5"
                            app:cardCornerRadius="5dp">

                            <Spinner
                                android:id="@+id/formBahuLuarKondisi"
                                android:layout_width="233dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <TextView
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Tipe Bahu Dalam"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/formBahuDalamTipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/formBahuDalamForm"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/formBahuMad"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight="1.5"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="material : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2.5"
                        app:cardCornerRadius="5dp">

                        <Spinner
                            android:id="@+id/formBahuDalamMaterial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="viewEnd"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lebar (b) : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="3"
                        app:cardCornerRadius="5dp">

                        <EditText
                            android:id="@+id/formBahuDalamLebar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@android:color/background_light"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:maxLength="4"
                            android:paddingLeft="10dp"
                            android:textSize="14dp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Meter"
                        android:textColor="#AA2929"
                        android:textSize="11dp"
                        android:textStyle="italic|bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>





            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#d9d9d9"
                app:cardCornerRadius="3dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/formBahuRecycle"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_weight="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        app:cardCornerRadius="3dp"
                        app:cardBackgroundColor="#A29E9E"
                        android:id="@+id/formBahuAdd"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dp"
                                android:id="@+id/formBahuFoto"
                                android:src="@drawable/ic_menu_camera"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />

                            <ImageView
                                android:id="@+id/formBahuGaleri"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dp"
                                android:src="@drawable/ic_menu_gallery" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/formBahuSave"
                    app:cardCornerRadius="5dp"
                    android:layout_centerInParent="true"
                    app:cardBackgroundColor="#4159BE"
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:text="Save"
                        android:textColor="@android:color/background_light"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:layout_height="40dp" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>