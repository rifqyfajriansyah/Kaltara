<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.roadmanagement.kaltara.Dokumen.DokumenActivity">

    <include layout="@layout/tooljudul"/>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/downloadruas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"></Spinner>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Download File RNI"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/downloaddokumensingle"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="80dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:text="Single"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/downloaddokumenall"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="2dp"
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#009688"
            android:layout_width="80dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:text="All"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary">
        <TextView
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Download File Drainase"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <Spinner
                android:layout_gravity="center_horizontal"
                android:id="@+id/downloadposisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            app:cardCornerRadius="3dp"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <Spinner
                android:layout_gravity="center_horizontal"
                android:id="@+id/downloadsegment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <Spinner
                android:layout_gravity="center_horizontal"
                android:id="@+id/downloadsubseg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/downloaddokumenDrainase"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#3F51B5"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:text="Download"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/downloadRuasDrainase"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#3F51B5"
            android:layout_width="100dp"
            android:layout_marginRight="10dp"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:text="Download Ruas"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>




</LinearLayout>
