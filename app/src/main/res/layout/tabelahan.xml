<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#9fa0a3"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/tablelahansta"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="3dp"
            android:text="Perkotaan"
            android:textAlignment="center"
            android:textColor="#4159BE"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tablelahansegment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="999"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tablelahankm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
            android:textColor="#AA2929"
            android:textSize="14dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tablekananlahan"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tablelahantinggikanan"
                    android:text="20"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="18dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:id="@+id/tablelahantipekanan"
                    android:text="Less 1 m"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="12dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:id="@+id/tablelahantagunkanan"
                    android:text="Perkotaan"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="11dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tablekirilahan"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tablelahantinggikiri"
                    android:text="20"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="18dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:id="@+id/tablelahantipekiri"
                    android:text="Less 1 m"
                    android:layout_gravity="center_horizontal|top"
                    android:textSize="12dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="bold"
                    android:id="@+id/tablelahantagunkiri"
                    android:text="Perkotaan"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="11dp"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </RelativeLayout>



</LinearLayout>


