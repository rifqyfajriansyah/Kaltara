<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#9fa0a3"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tablemediansta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text="Perkotaan"
                    android:textAlignment="center"
                    android:textColor="#4159BE"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tablemediansegment"
                    android:text="999"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tablemediankm"
                    android:textColor="#AA2929"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="5dp"
                    android:id="@+id/ktmtinggi"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/tablemediantinggi"
                        android:text="20"
                        android:layout_gravity="center_vertical"
                        android:textSize="18dp"
                        android:textColor="@android:color/background_dark"
                        android:textAlignment="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
