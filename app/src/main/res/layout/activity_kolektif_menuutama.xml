<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.roadmanagement.kaltara.kolektif.KolektifMenuutama">

    <include layout="@layout/tooljudul"/>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/listputih"
            android:layout_width="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_gravity="center_horizontal"
                android:id="@+id/spinnerkolektif"
                android:layout_width="200dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>


    </RelativeLayout>



    <LinearLayout
        android:layout_weight="3"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/buttonlahan"
                app:cardCornerRadius="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonlahan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#009688"
                        android:textSize="18dp"
                        android:text="LAHAN"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/buttonsaluran"
                app:cardCornerRadius="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonsaluran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"
                        android:text="SALURAN"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/buttonmedian"
                app:cardCornerRadius="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonmedian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"
                        android:text="MEDIAN"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>





        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/buttonsegment"
                android:layout_margin="5dp"
                app:cardCornerRadius="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonlane"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:textSize="18dp"
                        android:text="SEGMENT"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonbahu"
                app:cardCornerRadius="1dp"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonbahu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#663E02"
                        android:textSize="18dp"
                        android:text="BAHU"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/buttonlane"
                android:layout_margin="5dp"
                app:cardCornerRadius="1dp"
                android:layout_width="100dp"
                android:layout_height="100dp">
                <RelativeLayout
                    android:background="@drawable/buttonlane"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:textSize="18dp"
                        android:text="LANE"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>







        </LinearLayout>



    </LinearLayout>











</LinearLayout>
