<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_marginBottom="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#9fa0a3"
        android:layout_width="80dp"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tabelTambahanSta"
            android:layout_width="41dp"
            android:layout_height="29dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="3dp"
            android:text="Perkotaan"
            android:textAlignment="center"
            android:textColor="#4159BE"
            android:textSize="11dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabelTambahanSegment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="999"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18dp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tabelTambahanKanan"
                android:layout_width="100dp"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tabelTambahanKanan2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="20"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tabelTambahanKanan1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="3dp"
                    android:text="Perkotaan"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:id="@+id/tabelTambahanKanan3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="Perkotaan"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="11dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:id="@+id/tabelTambahanKiri"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:id="@+id/tabelTambahanKiri2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="20"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tabelTambahanKiri1"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginTop="3dp"
                    android:text="Perkotaan"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tabelTambahanKiri3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="3dp"
                    android:text="Perkotaan"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="11dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>




        </LinearLayout>


    </RelativeLayout>



</LinearLayout>