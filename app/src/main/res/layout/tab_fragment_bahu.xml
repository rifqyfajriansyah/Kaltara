                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/tabSaluranIconAir"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
