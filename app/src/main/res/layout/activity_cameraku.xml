<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.roadmanagement.kaltara.CameraLoc.Cameraku">

    <LinearLayout
        android:layout_weight="0.5"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <FrameLayout
            android:id="@+id/cPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/camFullText"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/camTextTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="top"
                    android:text="Road Management 1"
                    android:textColor="@android:color/background_light"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/camTextWaktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="kk:mm:ss"
                    android:gravity="top"
                    android:text="Road Management 1"
                    android:textColor="@android:color/background_light"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/camTextLatlong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:text="latlong"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/camTextProvinsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="Jakarta"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/camTextRuas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="001 - Jl. Sukamakmur"
                android:textColor="@android:color/background_light"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:background="#000"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCam"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/button_kamera"
            android:textSize="15sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/btnSwitch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/ic_cam_sw"/>

    </LinearLayout>

</LinearLayout>
